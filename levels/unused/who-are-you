title = Piacere di conoscerti!
cards = config-name config-email

[description]

Presentati usando

    git config --global user.name Firstname
    git config --global user.email "your@mail.com"

[setup]

[actions]

test "$(git config user.name)" != "You" && hint "Ciao $(git config user.name), piacere di conoscerti!"

[win]

# Avere un nome configurato.
test "$(git config user.name)" != "You"

# Avere un indirizzo email configurato.
test "$(git config user.email)" != "you@time.agency"
